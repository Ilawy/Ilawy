---
import AboutLayout from "../components/aboutLayout.astro";
---

<AboutLayout>
  <div class="p-4 w-full h-full md:flex-1 lg:my-auto">
    <h1 class="text-4xl font-bold text-gray-600 dark:text-gray-300">Social</h1>
    <div
      class="my-3 flex flex-col gap-3 max-h-[32ch] md:max-h-[64ch] scrollbar"
    >
      <div
        class="border bg-stone-100 dark:bg-[#535C91] p-3 flex flex-col gap-3 rounded-md"
      >
        <a
          href="https://github.com/ilawy"
          target="_blank"
          class="flex items-center justify-between"
        >
          <h2 class="text-2xl font-bold text-gray-600 dark:text-gray-300">
            GitHub
          </h2>
          <span class="text-lg text-gray-600">
            <embed src="/github.svg" type="image/svg+xml" />
          </span>
        </a>
      </div>
      <div
        class="border bg-stone-100 dark:bg-[#535C91] p-3 flex flex-col gap-3 rounded-md"
      >
        <a
          href="https://t.me/likeilawy"
          target="_blank"
          class="flex items-center justify-between"
        >
          <h2 class="text-2xl font-bold text-gray-600 dark:text-gray-300">
            Telegram
          </h2>
          <span class="text-lg text-gray-600">
            <embed src="/telegram.svg" type="image/svg+xml" />
          </span>
        </a>
      </div>
    </div>
  </div>
</AboutLayout>
